<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity_login"
    android:background="@color/bakground">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="false"
        android:layout_marginTop="40dp"
        android:textColor="@android:color/white"
        android:text="Login"
        android:textSize="24sp" />

    <RelativeLayout
        android:id="@+id/relativeputih"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="90dp"
        android:background="@drawable/putihbckgrnd"
        >

        <TextView
            android:id="@+id/textusernameorgmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Username or Email"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="50dp"/>
        <EditText
            android:id="@+id/edUsername"
            android:layout_width="350dp"
            android:inputType="textEmailAddress"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="15dp"
            android:layout_height="wrap_content"
            android:hint="Enter Your Username or Email"
            android:layout_below="@id/textusernameorgmail"
            android:background="@drawable/backgorundedit"
            android:padding="12dp" />

        <TextView
            android:id="@+id/textPassword"
            android:layout_below="@id/edUsername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="40dp"/>
        <EditText
            android:id="@+id/edPassword"
            android:inputType="textPassword"
            android:layout_width="350dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="15dp"
            android:layout_height="wrap_content"
            android:hint="Enter Your Password"
            android:layout_below="@id/textPassword"
            android:background="@drawable/backgorundedit"
            android:padding="12dp" />


        <TextView
            android:id="@+id/txtForgot"
            android:layout_below="@id/edPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Forgot Password?"
            android:onClick="lblForgot"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"/>

        <Button
            android:id="@+id/btLogin"
            android:layout_marginTop="40dp"
            android:layout_centerInParent="true"
            android:layout_below="@id/txtForgot"
            android:background="@drawable/backgorudnbtn"
            android:layout_width="200dp"
            android:layout_height="45dp"
            android:layout_alignParentBottom="false"
            android:text="Login"
            android:onClick="btnLogin"
            android:textColor="@android:color/white"
            android:textSize="18sp"/>

        <TextView
            android:onClick="lblSignUp"
            android:id="@+id/txtSignup"
            android:layout_below="@id/btLogin"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign Up"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"/>

    </RelativeLayout>

</RelativeLayout>
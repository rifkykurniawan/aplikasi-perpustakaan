<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bakground"
    tools:context=".activity_detail_perpustakaan">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tittle_detail"
        android:textSize="20sp"
        android:layout_marginTop="20dp"
        android:textColor="@android:color/white"
        android:layout_gravity="center_horizontal"
        android:text="Perpustakaan Kota"
        android:textStyle="bold"/>

    <LinearLayout
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:padding="15dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/putihlengkung"
        >
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_marginTop="9dp"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="400dp"
                android:layout_height="200dp"
                android:layout_gravity="center_horizontal"
                android:id="@+id/image_detail"
                android:src="@drawable/perpus_yk2"/>


        </FrameLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_height="wrap_content"
            android:background="@drawable/imagelengkung"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_action_share"
                android:id="@+id/imageshare"
                android:layout_marginHorizontal="50dp"
                ></ImageView>
            <Button
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/favorit"
                android:background="@drawable/ic_favorite"
                android:layout_centerHorizontal="true"></Button>
            <Button
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/imagemap"

                android:background="@drawable/ic_map"
                android:layout_marginHorizontal="300dp"></Button>
        </RelativeLayout>
        <androidx.core.widget.NestedScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/nesteddeskripsi">
            <LinearLayout
                android:layout_width="400dp"
                android:layout_height="100dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/detail_price"
                    android:text="Deskripsi"
                    android:textColor="@android:color/black"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="15dp"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/deskripsi3"
                    android:text="alamat"
                    ></TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/deskripsi4"
                    android:text="tes2"
                    ></TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/deskripsi5"
                    android:text="tes3"
                    ></TextView>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp">
            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/textviewimage"
                android:text="More Picture"
                android:textStyle="bold |italic"
                android:background="@android:color/darker_gray"
                android:textColor="@android:color/black"
                android:layout_marginBottom="10dp"
                android:layout_height="wrap_content"></TextView>
            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:id="@+id/iamgeview1"
                android:layout_marginTop="10dp"
                android:layout_below="@id/textviewimage"
                android:scaleType="centerCrop"
                android:layout_marginHorizontal="20dp"
                android:background="@drawable/imagelengkung"
                android:src="@drawable/perpustakaanyk1">
            </ImageView>
            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:id="@+id/iamgeview2"
                android:layout_marginTop="10dp"
                android:layout_below="@id/textviewimage"
                android:scaleType="centerCrop"
                android:layout_marginHorizontal="150dp"
                android:background="@drawable/imagelengkung"
                android:src="@drawable/perpustakaanyk1">
            </ImageView>
            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:id="@+id/iamgeview3"
                android:layout_marginTop="10dp"
                android:layout_below="@id/textviewimage"
                android:scaleType="centerCrop"
                android:layout_marginHorizontal="300dp"
                android:background="@drawable/imagelengkung"
                android:src="@drawable/perpustakaanyk1">
            </ImageView>

        </RelativeLayout>


    </LinearLayout>
</LinearLayout>
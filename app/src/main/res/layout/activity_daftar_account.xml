<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity_login"
    android:background="@color/bakground">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textColor="@android:color/white"
        android:text="Welcome To"
        android:textSize="24sp" />
    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_below="@id/textView3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_marginVertical="50dp"
        android:textColor="@android:color/white"
        android:text="Perpus Online"
        android:textSize="24sp" />
    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textColor="@android:color/white"
        android:text="Create Your Account "
        android:layout_marginVertical="89dp"
        android:layout_below="@id/textView4"
        android:textSize="24sp" />

    <RelativeLayout
        android:id="@+id/relativeputih"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="130dp"
        android:background="@drawable/putihbckgrnd"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:id="@+id/linerid"
            android:orientation="vertical">
            <EditText
                android:id="@+id/edUsername"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@android:color/black"
                android:hint="Username"
                android:textColorHint="@android:color/darker_gray"
                android:layout_marginLeft="20dp"
                android:layout_centerVertical="true"
                android:layout_marginVertical="110dp" />
            <EditText
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/edUsername"
                android:hint="Email"
                android:inputType="textEmailAddress"

                android:id="@+id/emailedit"
                android:textColorHint="@android:color/darker_gray"
                android:layout_marginLeft="20dp"
                android:backgroundTint="@android:color/black"
                android:layout_marginTop="-100dp"></EditText>
            <EditText
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/edUsername"
                android:hint="No Telepon"
                android:inputType="number"
                android:backgroundTint="@android:color/black"
                android:id="@+id/noteledit"
                android:layout_marginVertical="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="-100dp"></EditText>
            <EditText
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/edUsername"
                android:hint="Password"
                android:id="@+id/Password"
                android:inputType="textPassword"
                android:backgroundTint="@android:color/black"
                android:layout_marginLeft="20dp"
                android:layout_marginVertical="5dp"
                android:layout_marginTop="-100dp"></EditText>


        </LinearLayout>
        <Button
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_centerVertical="false"
            android:layout_centerHorizontal="true"
            android:layout_marginVertical="340dp"
            android:background="@drawable/backgorudnbtn"
            android:id="@+id/btn_singup"
            android:hint="Sign Up"
            android:onClick="btnSignUp"
            android:textColorHint="@android:color/white"></Button>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="400dp"
            android:layout_centerHorizontal="true">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Term And Condition"
                android:layout_marginTop="6dp"></TextView>

        </RelativeLayout>




    </RelativeLayout>

</RelativeLayout>